/* pages/jrzp/jrzp.wxss */
@import "jrzp-template/jrzp-template.wxss";

page {
  display: flex;
  flex-direction: column;
}

/* 区域选择/行业选择  */

.jrzp-head {
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #999;
  position: fixed;
  top: 0;
  z-index: 1000;
  background: white;
}

.jrzp-headContainer {
  width: 90%;
  margin: 0 auto;
  display: flex;
  flex-direction: row;
  height: 100rpx;
  line-height: 100rpx;
}

.jrzp-headContainer-l {
  width: 50%;
  text-align: center;
}

.jrzp-headContainer-r {
  width: 50%;
  background-color: #ededed;
  text-align: center;
}

.swiper-tab {
  width: 100%;
 
  text-align: center;
  line-height:100rpx;
  position: relative;
  top: 0;
}

.swiper-tab-list {
  font-size: 32rpx;
  display: inline-block;
  width: 33%;
  color: #777;
}

.on {
  color: #062f8e;
  font-weight: bold;
  border-bottom: 4rpx solid #062f8e;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
  background: #eee;
  margin-top:100rpx
}

.swiper-box view {
  text-align: center;
}

