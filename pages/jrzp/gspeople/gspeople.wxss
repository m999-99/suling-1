/* pages/jrzp/gspeople/gspeople.wxss */
.resume-title{
  width: 99%;
  height: 160rpx;
  background-color: #fff;
  margin: 0 auto;
  box-shadow: 0 2rpx 16rpx 2rpx skyblue;
  
}
.resume-imageTitle{
  width: 100rpx;
  height: 100rpx;
  border-radius:50%;
  margin:0 auto;
  overflow: hidden
}
.resume-nameTitle{
  color: skyblued;
  text-align: center;
  padding: 6rpx
}
.person-resume{
  padding: 0;
  margin: 0;
  width: 100%
}
.resumeSubmit{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 0 auto

}
.placeholdeCenter{
    text-align: center;
   vertical-align: middle
}  
.resumeContainer{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 100%;
  height: 100rpx;
  border-bottom: 1rpx solid #ededed
}
.resumeContainer-l{
  font-weight: bold;
width: 30%;
font-size: 30rpx;
text-align: right;
color: #333;


}
.resumeContainer-r{
width: 70%;
text-align:center;
font-size: 28rpx;
color: #666;


}

/* 提交按钮 */
.submitChange{
   width: 100;
   display: flex;
   flex-direction: row;
   margin-top: 40rpx
}
.submitButton{
  width:60%
}
.resetButton{
  width: 30%
}